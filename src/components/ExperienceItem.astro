---
import { Markdown } from '@astropub/md';
import LinkInline from './LinkInline.astro';
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<section
  class="relative mx-4 md:mx-12 pb-6 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-neutral-200 dark:before:border-neutral-700 md:grid-cols-5 md:gap-10">
  <header class="sticky top-0 pb-4 md:col-span-2">
    <span class="gradient-heading absolute -left-[42px] rounded-full text-5xl">&bull;</span>
    <h3 class="text-xl font-bold gradient-heading">{title}</h3>
    <h4 class="font-semibold text-xl text-gray-600 dark:text-gray-200">{company}</h4>
    <time class="text-sm text-gray-500 dark:text-gray-400">{date}</time>
  </header>
  <main class="relative flex flex-col gap-2 pb-4 text-sm md:text-base md:col-span-3 text-gray-600 dark:text-gray-300">
    <article class="whitespace-pre-line leading-normal text-gray-800 dark:text-gray-200 break-words">
      <Markdown of={description} />
    </article>
    {
      link && (
        <LinkInline href={link} class="flex items-center text-yellow-400 hover:underline">
          Saber m√°s
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ml-1 w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M9 6l6 6-6 6" />
          </svg>
        </LinkInline>
      )
    }
  </main>
</section>

---
import { Image } from 'astro:assets';
import type { Experience } from '@/data/model/manfred.interface';
import SectionContainer from '../atoms/SectionContainer.astro';

interface Props {
  experience: Experience;
}

const { experience } = Astro.props;

// Get projects data
const projects = experience?.projects || [];
---

{
  projects.length > 0 && (
    <section id="proyectos" class="py-24 scroll-mt-20" aria-labelledby="projects-heading">
      <SectionContainer>
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          {/* Header */}
          <div class="text-center space-y-4 mb-16">
            <span class="text-primary font-semibold text-sm tracking-[0.2em] uppercase">Proyectos</span>
            <h2
              id="projects-heading"
              class="text-balance text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-txt-primary tracking-tight">
              Proyectos personales
            </h2>
            <p class="text-gray-600 dark:text-txt-secondary text-base md:text-lg max-w-xl mx-auto">Proyectos open source y side projects</p>
          </div>

          {/* Projects Grid */}
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {projects.map((project) => (
              <article class="group h-full p-6 rounded-2xl bg-white/50 dark:bg-glass border border-gray-200/50 dark:border-glass-border backdrop-blur-xl transition-all duration-300 hover:bg-white/70 dark:hover:bg-glass-strong hover:shadow-lg hover:-translate-y-1">
                {/* Project Image */}
                {project.details.image && (
                  <div class="relative mb-4 rounded-xl overflow-hidden aspect-video bg-gray-100 dark:bg-gray-800">
                    <Image
                      src={project.details.image.link}
                      alt={project.details.image.alt || project.details.name}
                      width={600}
                      height={338}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                  </div>
                )}

                {/* Content */}
                <div class="space-y-3">
                  <div class="flex items-start justify-between gap-2">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-txt-primary group-hover:text-primary transition-colors">
                      {project.details.name}
                    </h3>
                    {project.type === 'openSource' && (
                      <span class="shrink-0 px-2 py-0.5 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 text-xs font-medium">
                        Open Source
                      </span>
                    )}
                  </div>

                  {project.details.description && (
                    <p class="text-sm text-gray-600 dark:text-txt-secondary line-clamp-3">{project.details.description.split('\n')[0]}</p>
                  )}

                  {/* Technologies */}
                  {project.roles?.[0]?.competences && project.roles[0].competences.length > 0 && (
                    <div class="flex flex-wrap gap-1.5 pt-2">
                      {project.roles[0].competences.slice(0, 4).map((comp) => (
                        <span class="px-2 py-0.5 text-xs font-medium text-gray-600 dark:text-txt-secondary bg-gray-100/50 dark:bg-glass border border-gray-200/30 dark:border-glass-border rounded-full">
                          {comp.name}
                        </span>
                      ))}
                      {project.roles[0].competences.length > 4 && (
                        <span class="px-2 py-0.5 text-xs font-medium text-gray-500 dark:text-txt-tertiary">
                          +{project.roles[0].competences.length - 4}
                        </span>
                      )}
                    </div>
                  )}

                  {/* Link */}
                  {project.details.URL && (
                    <a
                      href={project.details.URL}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-1.5 text-sm font-medium text-primary hover:text-primary-600 transition-colors pt-2">
                      <span>Ver proyecto</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </article>
            ))}
          </div>
        </div>
      </SectionContainer>
    </section>
  )
}

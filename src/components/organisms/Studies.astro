---
import type { Knowledge } from '@/data/model/manfred.interface';
import SectionContainer from '../atoms/SectionContainer.astro';

interface Props {
  knowledge: Knowledge;
}

const { knowledge } = Astro.props;

// Get studies data
const studies = knowledge?.studies || [];
---

<section id="formacion" class="py-24 scroll-mt-20" aria-labelledby="studies-heading">
  <SectionContainer>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {/* Header */}
      <div class="text-center space-y-4 mb-16">
        <span class="text-primary font-semibold text-sm tracking-[0.2em] uppercase">Formación</span>
        <h2 id="studies-heading" class="text-balance text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-txt-primary tracking-tight">
          Educación y certificaciones
        </h2>
        <p class="text-gray-600 dark:text-txt-secondary text-base md:text-lg max-w-xl mx-auto">Mi formación académica y profesional</p>
      </div>

      {/* Studies Grid */}
      <div class="space-y-6">
        {
          studies.map((study) => (
            <article class="p-6 lg:p-8 rounded-2xl bg-white/50 dark:bg-glass border border-gray-200/50 dark:border-glass-border backdrop-blur-xl transition-all duration-300 hover:bg-white/70 dark:hover:bg-glass-strong hover:shadow-lg">
              <div class="flex flex-col md:flex-row md:items-start gap-4">
                {/* Icon */}
                <div class="shrink-0">
                  <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-100 to-primary-200 dark:from-primary-900/50 dark:to-primary-800/50 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
                      />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-txt-primary mb-1">{study.name}</h3>
                  <p class="text-base font-medium text-primary-600 dark:text-primary-400 mb-2">
                    {study.institution?.name || 'Institución'}
                  </p>
                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-500 dark:text-txt-tertiary">
                    <span class="inline-flex items-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                      </svg>
                      {new Date(study.startDate).getFullYear()} - {study.finishDate ? new Date(study.finishDate).getFullYear() : 'Presente'}
                    </span>
                    {study.degreeAchieved && (
                      <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-medium">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        Completado
                      </span>
                    )}
                  </div>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </SectionContainer>
</section>

---
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import GitHubIcon from '@/components/icons/GitHub.astro';
import XIcon from '@/components/icons/X.astro';
import Button from '@/components/atoms/Button.astro';

interface Props {
  links: {
    linkedin?: string;
    github?: string;
    twitter?: string;
  };
}

const { links } = Astro.props;
---

<div class="flex items-center gap-3 mt-4" role="navigation" aria-label="Redes sociales">
  {
    links.linkedin && (
      <Button 
        href={links.linkedin} 
        variant="ghost" 
        size="sm" 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label="LinkedIn"
      >
        <LinkedInIcon class="w-4 h-4" />
        <span class="hidden sm:inline">LinkedIn</span>
      </Button>
    )
  }
  {
    links.github && (
      <Button 
        href={links.github} 
        variant="ghost" 
        size="sm" 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <GitHubIcon class="w-4 h-4" />
        <span class="hidden sm:inline">GitHub</span>
      </Button>
    )
  }
  {
    links.twitter && (
      <Button 
        href={links.twitter} 
        variant="ghost" 
        size="sm" 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label="Twitter"
      >
        <XIcon class="w-4 h-4" />
        <span class="sr-only">Twitter</span>
      </Button>
    )
  }
</div>

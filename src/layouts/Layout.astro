---
import '@fontsource-variable/onest';
import 'sanitize.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import type { AboutMe, CareerPreferences } from '@/data/model/manfred.interface';

interface Props {
  title: string;
  description: string;
  ogImageUrl: string;
  aboutMe: AboutMe;
  careerPreferences: CareerPreferences;
}

const { description, title, ogImageUrl, aboutMe, careerPreferences } = Astro.props;

// SEO: Construir URL canónica
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// SEO: Extraer información de contacto
const linkedinProfile = careerPreferences.contact.publicProfiles.find(p => p.type === 'linkedin');
const githubProfile = careerPreferences.contact.publicProfiles.find(p => p.type === 'github');
const twitterProfile = careerPreferences.contact.publicProfiles.find(p => p.type === 'twitter');

// SEO: Structured Data - Person Schema
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": `${aboutMe.profile.name} ${aboutMe.profile.surnames}`,
  "jobTitle": aboutMe.profile.title,
  "description": aboutMe.profile.description,
  "url": canonicalURL.href,
  "image": aboutMe.profile.avatar.link,
  "address": {
    "@type": "PostalAddress",
    "addressCountry": aboutMe.profile.location.country,
    "addressRegion": aboutMe.profile.location.region,
    "addressLocality": aboutMe.profile.location.municipality
  },
  "sameAs": [
    linkedinProfile?.URL,
    githubProfile?.URL,
    twitterProfile?.URL
  ].filter(Boolean),
  "email": careerPreferences.contact.contactMails[0],
  "knowsAbout": aboutMe.profile.title.split('|').map(s => s.trim())
};

// SEO: Structured Data - WebSite Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": `${aboutMe.profile.name} ${aboutMe.profile.surnames} - Portfolio`,
  "url": canonicalURL.href,
  "description": description,
  "author": {
    "@type": "Person",
    "name": `${aboutMe.profile.name} ${aboutMe.profile.surnames}`
  }
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1a1a1a" />

    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={`${aboutMe.profile.name} ${aboutMe.profile.surnames}`} />
    <meta name="keywords" content={`${aboutMe.profile.title}, desarrollador, portfolio, ${aboutMe.profile.location.municipality}, ${aboutMe.profile.location.country}`} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImageUrl, Astro.site)} />
    <meta property="og:image:alt" content={`Foto de perfil de ${aboutMe.profile.name}`} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content={`${aboutMe.profile.name} ${aboutMe.profile.surnames}`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImageUrl, Astro.site)} />
    <meta name="twitter:image:alt" content={`Foto de perfil de ${aboutMe.profile.name}`} />
    {twitterProfile && <meta name="twitter:creator" content={twitterProfile.URL.split('/').pop()} />}

    <!-- Structured Data - JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(personSchema)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://raw.githubusercontent.com" />

    <ViewTransitions />
  </head>

  <body class="relative text-black dark:text-white min-h-screen">
    <!-- Fondo Liquid Glass unificado - Único background -->
    <div class="fixed inset-0 z-[-2] overflow-hidden w-screen" aria-hidden="true">
      <!-- Base más sólida para mejor contraste de texto AAA -->
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-blue-50/70 to-purple-50/50 dark:from-gray-950 dark:via-blue-950/50 dark:to-purple-950/40"></div>

      <!-- Mesh gradients sutiles y animados -->
      <div class="absolute top-0 -left-20 w-[600px] h-[600px] bg-gradient-to-br from-blue-400/20 to-purple-400/20 dark:from-blue-500/10 dark:to-purple-500/10 rounded-full mix-blend-normal dark:mix-blend-soft-light filter blur-[100px] animate-blob-slow"></div>
      <div class="absolute top-20 right-0 w-[500px] h-[500px] bg-gradient-to-br from-purple-400/20 to-pink-400/20 dark:from-purple-500/10 dark:to-pink-500/10 rounded-full mix-blend-normal dark:mix-blend-soft-light filter blur-[100px] animate-blob-slow animation-delay-3000"></div>
      <div class="absolute bottom-0 left-1/3 w-[550px] h-[550px] bg-gradient-to-br from-pink-400/15 to-blue-400/15 dark:from-pink-500/8 dark:to-blue-500/8 rounded-full mix-blend-normal dark:mix-blend-soft-light filter blur-[100px] animate-blob-slow animation-delay-5000"></div>

      <!-- Glass overlay más sólido para mejor contraste AAA -->
      <div class="absolute inset-0 backdrop-blur-[3px] bg-white/60 dark:bg-gray-950/60"></div>

      <!-- Grain texture muy sutil -->
      <div class="absolute inset-0 opacity-[0.02] dark:opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=\'0 0 400 400\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'noiseFilter\'%3E%3CfeTurbulence type=\'fractalNoise\' baseFrequency=\'0.9\' numOctaves=\'4\' stitchTiles=\'stitch\'/%3E%3C/filter%3E%3Crect width=\'100%25\' height=\'100%25\' filter=\'url(%23noiseFilter)\'/%3E%3C/svg%3E');"></div>
    </div>

    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-6 focus:py-3 focus:bg-blue-600 focus:text-white focus:rounded-2xl focus:shadow-2xl focus:font-semibold">
      Saltar al contenido principal
    </a>

    <Header />
    <main id="main-content" class="overflow-x-hidden w-full">
      <slot />
    </main>
    <Footer aboutMe={aboutMe} careerPreferences={careerPreferences} />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: 'Onest Variable', system-ui, sans-serif;
        scroll-behavior: auto;
        overflow-x: hidden;
        overflow-y: auto;
        width: 100%;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden;
        overflow-y: auto;
        width: 100%;
        position: relative;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(0, 0, 0);
          padding: 0.25rem 0.75rem;
          display: flex;
          flex-direction: row;
          align-items: center;
          background-color: #f4f4f4; /* Color de fondo más claro */
          border-radius: 9999px;
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          from {
            border: 0px;
          }
          to {
            box-shadow:
              0px 5px 50px -5px rgba(0, 0, 0, 0.1),
              0px 0px 0 1px rgba(0, 0, 0, 0.3);
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-width: 1px;
            border-color: rgba(0, 0, 0);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: #333; /* Color de fondo más oscuro */
            border-radius: 9999px;
          }
        }
      }

      .gradient-heading {
        display: inline-block;
        background: linear-gradient(45deg, #4a00e0, /* Púrpura */ #8e2de2 /* Violeta */);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        background-size: 150% 150%;
        animation:
          gradient 15s ease infinite,
          color-shift 10s linear infinite;
      }

      @keyframes gradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      @keyframes color-shift {
        0% {
          filter: hue-rotate(0deg);
        }
        100% {
          filter: hue-rotate(360deg);
        }
      }

      /* Animaciones para el mesh gradient background - Más lentas y sutiles */
      @keyframes blob-slow {
        0%, 100% {
          transform: translate(0px, 0px) scale(1);
        }
        33% {
          transform: translate(40px, -60px) scale(1.05);
        }
        66% {
          transform: translate(-30px, 40px) scale(0.95);
        }
      }

      .animate-blob-slow {
        animation: blob-slow 30s ease-in-out infinite;
      }

      .animation-delay-3000 {
        animation-delay: 3s;
      }

      .animation-delay-5000 {
        animation-delay: 5s;
      }
    </style>
  </body>
</html>

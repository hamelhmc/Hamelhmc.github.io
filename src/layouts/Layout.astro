---
import '@fontsource-variable/onest';
import 'sanitize.css';
import '../styles/global.css';
import Header from '../components/organisms/Header.astro';
import Footer from '../components/organisms/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import type { AboutMe, CareerPreferences, Knowledge } from '@/data/model/manfred.interface';

interface Props {
  title: string;
  description: string;
  ogImageUrl: string;
  aboutMe: AboutMe;
  careerPreferences: CareerPreferences;
  knowledge?: Knowledge;
}

const { description, title, ogImageUrl, aboutMe, careerPreferences, knowledge } = Astro.props;

// SEO: Construir URL canónica
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// SEO: Extraer información de contacto
const linkedinProfile = careerPreferences.contact.publicProfiles.find((p) => p.type === 'linkedin');
const githubProfile = careerPreferences.contact.publicProfiles.find((p) => p.type === 'github');
const twitterProfile = careerPreferences.contact.publicProfiles.find((p) => p.type === 'twitter');

// SEO: Construir keywords dinámicos
const hardSkills = knowledge?.hardSkills.map((s) => s.skill.name) || [];
const keywords = [
  aboutMe.profile.title,
  'desarrollador custom',
  'desarrollador',
  'web developer',
  'portfolio',
  aboutMe.profile.location.municipality,
  aboutMe.profile.location.country,
  ...hardSkills,
].join(', ');

// SEO: Structured Data - Person Schema
const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: `${aboutMe.profile.name} ${aboutMe.profile.surnames}`,
  jobTitle: aboutMe.profile.title,
  description: aboutMe.profile.description,
  url: canonicalURL.href,
  image: aboutMe.profile.avatar.link,
  address: {
    '@type': 'PostalAddress',
    addressCountry: aboutMe.profile.location.country,
    addressRegion: aboutMe.profile.location.region,
    addressLocality: aboutMe.profile.location.municipality,
  },
  sameAs: [linkedinProfile?.URL, githubProfile?.URL, twitterProfile?.URL].filter(Boolean),
  email: careerPreferences.contact.contactMails[0],
  knowsAbout: [...aboutMe.profile.title.split('|').map((s) => s.trim()), ...hardSkills],
  alumniOf: knowledge?.studies
    .map((study) => ({
      '@type': 'EducationalOrganization',
      name: study.institution?.name,
      sameAs: study.institution?.URL,
    }))
    .filter((s) => s.name),
};

// SEO: Structured Data - WebSite Schema
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: `${aboutMe.profile.name} ${aboutMe.profile.surnames} - Portfolio`,
  url: canonicalURL.href,
  description: description,
  author: {
    '@type': 'Person',
    name: `${aboutMe.profile.name} ${aboutMe.profile.surnames}`,
  },
};
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#14B8A6" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1a1a1a" />

    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={`${aboutMe.profile.name} ${aboutMe.profile.surnames}`} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.png', Astro.site)} />
    <meta property="og:image:alt" content={`Preview de ${aboutMe.profile.name}`} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content={`${aboutMe.profile.name} ${aboutMe.profile.surnames}`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/og-image.png', Astro.site)} />
    <meta name="twitter:image:alt" content={`Preview de ${aboutMe.profile.name}`} />
    <meta name="twitter:site" content="@hamelhmc" />
    <meta name="twitter:domain" content="hamelhmc.github.io" />
    {twitterProfile && <meta name="twitter:creator" content={twitterProfile.URL.split('/').pop()} />}

    <!-- Structured Data - JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(personSchema)}></script>
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://raw.githubusercontent.com" />

    <ClientRouter />
  </head>

  <body class="relative text-black dark:text-white min-h-screen">
    <!-- Fondo Liquid Glass - Deep dark with animated teal glow -->
    <div class="fixed inset-0 z-[-2] overflow-hidden w-screen" aria-hidden="true">
      <div class="absolute inset-0 bg-white dark:bg-deep transition-colors duration-500"></div>

      <!-- Animated Orbs -->
      <div
        class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] rounded-full bg-primary-200/40 dark:bg-primary-900/40 blur-[80px] animate-glow-pulse">
      </div>
      <div
        class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] rounded-full bg-primary-300/30 dark:bg-primary-800/20 blur-[100px] animate-glow-pulse"
        style="animation-delay: 1.5s">
      </div>

      <!-- Glass overlay -->
      <div class="absolute inset-0 bg-white/30 dark:bg-deep/50 backdrop-blur-[100px]"></div>

      <!-- Gradient Mesh -->
      <div
        class="absolute inset-0 opacity-[0.15] dark:opacity-[0.2] bg-[radial-gradient(circle_at_50%_50%,rgba(20,184,166,0.1),transparent_50%)] animate-gradient-shift">
      </div>
    </div>

    <!-- Skip to content -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-6 focus:py-3 focus:bg-blue-600 focus:text-white focus:rounded-2xl focus:shadow-2xl focus:font-semibold">
      Saltar al contenido principal
    </a>

    <Header />
    <main id="main-content" class="overflow-x-hidden w-full">
      <slot />
    </main>
    <Footer aboutMe={aboutMe} careerPreferences={careerPreferences} />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: 'Onest Variable', system-ui, sans-serif;
        scroll-behavior: auto;
        overflow-x: hidden;
        overflow-y: auto;
        width: 100%;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden;
        overflow-y: auto;
        width: 100%;
        position: relative;
        /* Hide scrollbar for all browsers */
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      body::-webkit-scrollbar {
        display: none;
      }

      html {
        scrollbar-width: none;
        -ms-overflow-style: none;
      }

      html::-webkit-scrollbar {
        display: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
